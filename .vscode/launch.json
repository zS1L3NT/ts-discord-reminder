	"version": "0.2.0",
	"configurations": [
		{
			"type": "node",
			"request": "launch",
			"name": "app.ts",
			"program": "${workspaceFolder}/src/app.ts",
			"sourceMaps": true,
			"trace": "all",
			"skipFiles": ["<node_internals>/**"],
			"runtimeExecutable": "node",
			"runtimeArgs": ["--nolazy", "-r", "ts-node/register/transpile-only"]
		}
	]
}
